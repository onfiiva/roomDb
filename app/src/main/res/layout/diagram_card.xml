<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#151515">

    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginVertical="20dp"
        android:layout_weight="1"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:egInnerPaddingColor="#151515"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piechart">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="5dp">
            <View
                android:id="@+id/view1_card"
                android:layout_width="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/transfer_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer: "
                android:textColor="#959595"
                android:textSize="10pt"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="5dp">
            <View
                android:id="@+id/view2_card"
                android:layout_width="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/cashing_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cashing out: "
                android:textColor="#959595"
                android:textSize="10pt"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="5dp">
            <View
                android:id="@+id/view3_card"
                android:layout_width="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/market_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market: "
                android:textColor="#959595"
                android:textSize="10pt"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="5dp">
            <View
                android:id="@+id/view4_card"
                android:layout_width="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/food_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food: "
                android:textColor="#959595"
                android:textSize="10pt"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="5dp">
            <View
                android:id="@+id/view5_card"
                android:layout_width="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/electronics_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics: "
                android:textColor="#959595"
                android:textSize="10pt"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
    </LinearLayout>


    <ImageButton
        android:id="@+id/exit_from_card_diagram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/button_circle"
        android:src="@drawable/exit_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>